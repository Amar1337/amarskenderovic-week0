<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sick.amarskenderovic_week0.MainActivity"
    android:id="@+id/totalTextview"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Mr. Potatohead"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@drawable/hat"
        android:contentDescription="titlepotato" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/body"
            android:src="@drawable/body"
            android:layout_toStartOf="@+id/gridLayout" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/shoes"
            android:src="@drawable/shoes"
            android:layout_toStartOf="@+id/gridLayout"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/arms"
            android:src="@drawable/arms"
            android:layout_toStartOf="@+id/gridLayout"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/hat"
            android:src="@drawable/hat"
            android:layout_toStartOf="@+id/gridLayout"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ears"
            android:src="@drawable/ears"
            android:layout_toStartOf="@+id/gridLayout"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/eyes"
            android:src="@drawable/eyes"
            android:layout_toStartOf="@+id/gridLayout"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/eyebrows"
            android:src="@drawable/eyebrows"
            android:layout_toStartOf="@+id/gridLayout"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/glasses"
            android:src="@drawable/glasses"
            android:layout_toStartOf="@+id/gridLayout"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/nose"
            android:src="@drawable/nose"
            android:layout_toStartOf="@+id/gridLayout"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/mouth"
            android:src="@drawable/mouth"
            android:layout_toStartOf="@+id/gridLayout"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/mustache"
            android:src="@drawable/mustache"
            android:layout_toStartOf="@+id/gridLayout"
            android:layout_alignParentLeft="true"
            android:visibility="invisible" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:id="@+id/gridLayout"
            android:layout_alignParentRight="true">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ears"
                android:id="@+id/checkBox1"
                android:layout_above="@+id/checkBox3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:checked="false"
                android:layout_row="0"
                android:layout_column="1"
                android:visibility="visible" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoes"
                android:id="@+id/checkBox2"
                android:layout_above="@+id/checkBox5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:checked="false"
                android:layout_row="0"
                android:layout_column="2"
                android:visibility="visible" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moustache"
                android:id="@+id/checkBox3"
                android:layout_alignBottom="@+id/checkBox3"
                android:layout_alignLeft="@+id/checkBox2"
                android:layout_alignStart="@+id/checkBox2"
                android:checked="false"
                android:layout_row="1"
                android:layout_column="1"
                android:visibility="visible" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eyebrows"
                android:id="@+id/checkBox4"
                android:layout_row="1"
                android:checked="false"
                android:layout_column="2"
                android:visibility="visible" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arms"
                android:id="@+id/checkBox5"
                android:checked="false"
                android:layout_row="2"
                android:layout_column="1"
                android:visibility="visible" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eyes"
                android:id="@+id/checkBox6"
                android:layout_above="@+id/checkBox"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:checked="false"
                android:layout_row="2"
                android:layout_column="2"
                android:visibility="visible" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hat"
                android:id="@+id/checkBox7"
                android:layout_above="@+id/checkBox4"
                android:layout_alignLeft="@+id/checkBox4"
                android:layout_alignStart="@+id/checkBox4"
                android:checked="false"
                android:layout_row="3"
                android:layout_column="1"
                android:visibility="visible" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mouth         "
                android:id="@+id/checkBox8"
                android:layout_alignBottom="@+id/checkBox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:checked="false"
                android:layout_row="3"
                android:layout_column="2"
                android:visibility="visible" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glasses"
                android:id="@+id/checkBox9"
                android:layout_row="4"
                android:layout_column="1"
                android:checked="false"
                android:visibility="visible" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nose"
                android:id="@+id/checkBox10"
                android:checked="false"
                android:layout_row="4"
                android:layout_column="2"
                android:visibility="visible" />
        </GridLayout>
    </RelativeLayout>

</LinearLayout>
